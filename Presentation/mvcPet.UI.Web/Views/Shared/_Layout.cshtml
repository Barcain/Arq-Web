<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Veterinaria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Turnos", "Turnos", "Home")</li>
                        <li>@Html.ActionLink("Clientes", "Clientes", "Home")</li>
                        <li>@Html.ActionLink("Pacientes", "Pacientes", "Home")</li>
                        <li>@Html.ActionLink("Médicos", "Medicos", "Home")</li>
                        <li>@Html.ActionLink("Salas", "Salas", "Salas")</li>
                        <li>@Html.ActionLink("Especies", "Index", "Especie")</li>
                        <li>@Html.ActionLink("Servicios", "Index", "Servicios")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Información", "About", "Home")</li>                                               
                    </ul>
                    @Html.Partial("_MenuPartial")
                    @Html.Partial("_LoginPartial")
                </div>                                          
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <footer>
                <hr />
                <p>&copy; @DateTime.Now.Year - Arquitectura Web - UNPaz</p>
            </footer>
        </div>   

    

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
